.wrapper
  .container
    %h1.heading
      学習ログの編集
    = form_for [@user, @log] do |f|
      .study-date
        =f.label '学習日付：'
        = f.date_field :achieve_ymd, class: 'form-field'
      .study-hours
        =f.label '学習時間：'
        = f.number_field :achieve_time, min: '1', max: '24', class: 'form-field'
        時間
      = f.submit '更新する', class: 'btn btn-primary'